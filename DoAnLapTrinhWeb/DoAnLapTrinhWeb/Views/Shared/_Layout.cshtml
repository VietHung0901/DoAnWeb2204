@using DoAnLapTrinhWeb.Areas.Admin.Models;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoAnLapTrinhWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoAnLapTrinhWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="background-color: #e1dcc5">

            <div class="container-fluid" style="height: 72px;">
                <a class="navbar-brand" asp-area="" asp-controller="Books" asp-action="Index">
                    <img src="~/images/BackgroundMenu.jpg" style="height: 90px; width: 200px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="menu">
                        <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index" style="font-size: 20px;
                                                               font-family: 'Times New Roman';
                                                               font-weight: bold;">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="LichSu" asp-action="Index" style="font-size: 20px;
                                                               font-family: 'Times New Roman';
                                                               font-weight: bold;">Lịch sử</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="find" asp-route-search="" style="font-size: 20px;
                                                               font-family: 'Times New Roman';
                                                               font-weight: bold;">Tìm kiếm</a>
                                </li>
                        </ul>
                    </div>
                        <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Đồ án lập trình web - Nhóm 6
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
