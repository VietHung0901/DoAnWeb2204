@model IEnumerable<DoAnLapTrinhWeb.Models.TbTrang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Quản lý tác giả</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            margin-right: 10px;
            font-size: 16px;
            border: none;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }

            .btn a {
                color: white;
                text-decoration: none;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Quản lý trang</h1>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.sach.tenSach)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Noidung)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.sach != null)
                        {
                            @Html.DisplayFor(modelItem => item.sach.tenSach)
                        }
                        else
                        {
                            <text>Không có tên sách</text>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Noidung)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
