
@model IEnumerable<DoAnLapTrinhWeb.Models.tbSach>

<head>
    <title>Danh sách sách</title>
    <style>
        .book-list {
            display: flex;
            flex-wrap: wrap;
        }

        .book {
            flex-basis: calc(16.666% - 20px);
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 10px;
        }

        .book-image {
            width: 100px;
            height: 150px;
            margin-bottom: 10px;
        }

        .book-title {
            font-weight: bold;
            margin-bottom: 5px;
            width: 150px; /* Chiều rộng cố định, ví dụ 150px */
            white-space: nowrap; /* Ngăn tiêu đề sách xuống dòng */
            overflow: hidden; /* Ẩn phần vượt quá kích thước của tiêu đề sách */
            text-overflow: ellipsis; /* Hiển thị dấu chấm (...) khi tiêu đề sách vượt quá kích thước */
        }

        .book-button {
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Danh sách các cuốn sách</h1>
    
        <div class="book-list">
        @foreach (var item in Model)
        {
            <div class="book">
                <img class="book-image" src="@item.imageUrl">
                <div class="book-title">@Html.DisplayFor(modelItem => item.tenSach)</div>
                <a class="book-button"  asp-area="Admin" asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">Xem thông tin sách</a>
            </div>        
        }
        </div>
</body>

<div style="text-align: center;">
    @if (ViewBag.PageCount > 1)
    {
        for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            <a href="/Admin/Books/Index?page=@i"  style="margin: 5px; padding: 5px; border: 1px solid #ccc; border-radius: 3px; display: inline-block;">@i</a>
        }
    }
</div>