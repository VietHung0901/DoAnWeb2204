
@model IEnumerable<DoAnLapTrinhWeb.Models.tbTacGia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Quản lý tác giả</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            margin-right: 10px;
            font-size: 16px;
            border: none;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }

            .btn a {
                color: white;
                text-decoration: none;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Quản lý tác giả</h1>

    <div class="btn-container">
        <button class="btn"><a asp-action="Add">Thêm tác giả</a></button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Tên tác giả</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tacGia in Model)
            {
                <tr>
                    <td>@tacGia.TenTacGia</td>
                    <td>
                        <button class="btn"><a asp-action="Update" asp-route-id="@tacGia.Id">Sửa thông tin</a></button>
                        @* <a asp-action="Display" asp-route-id="@tacGia.Id">View</a> |
                        <a asp-action="Delete" asp-route-id="@tacGia.Id">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

