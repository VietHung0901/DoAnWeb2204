@model DoAnLapTrinhWeb.Models.tbSach

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="tenSach" class="control-label"></label>
                <input asp-for="tenSach" class="form-control" />
                <span asp-validation-for="tenSach" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="theLoaiId">Thể loại</label>
                <select asp-for="theLoaiId" asp-items=" ViewBag.TheLoai" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="tacGiaId">Tac Gia</label>
                <select asp-for="tacGiaId" asp-items=" ViewBag.TacGia" class="form-control"></select>

            </div>
            <div class="form-group">
                <label asp-for="imageUrl" class="control-label">Chọn ảnh</label>
                <input type="file" name="imageUrl" class="form-control" />
                <span asp-validation-for="imageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="moTa" class="control-label"></label>
                <input asp-for="moTa" class="form-control" />
                <span asp-validation-for="moTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

