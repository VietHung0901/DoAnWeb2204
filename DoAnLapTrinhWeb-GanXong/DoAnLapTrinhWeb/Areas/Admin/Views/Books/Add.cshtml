@model DoAnLapTrinhWeb.Models.tbSach
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Add Book</h2>
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="tenSach">Tên sách</label>
        <input asp-for="tenSach" class="form-control" />
        <span asp-validation-for="tenSach" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="imageUrl">Book Image</label>
        <input type="file" asp-for="imageUrl" class="form-control" />
        <span asp-validation-for="imageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="theLoaiId">Thể loại</label>
        <select asp-for="theLoaiId" asp-items=" ViewBag.TheLoai" class="form-control">
            <option value="-1">- chọn thể loại -</option>
        </select>
        <span asp-validation-for="theLoaiId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tacGiaId">Tác giả</label>
        <select asp-for="tacGiaId" asp-items=" ViewBag.TacGia" class="form-control">
            <option value="-1">- chọn tác giả -</option>
        </select>
        <span asp-validation-for="tacGiaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="moTa">Mô tả</label>
        <input asp-for="moTa" class="form-control" />
        <span asp-validation-for="moTa" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
<a asp-action="Index" onclick="confirmBackToList()">Back to List</a>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        // Hàm hiển thị thông báo với thời gian tự đóng
        function showSuccessMessage() {
            Swal.fire({
                icon: 'success',
                title: '@TempData["SuccessMessage"]',
                showConfirmButton: false,
                timer: 1500,
                onClose: function () {
                    // Sau khi thông báo tự đóng, chuyển hướng đến trang Index
                    window.location.href = '@Url.Action("Index", "Book")';
                }
            });
        }

        // Hàm hiển thị thông báo lỗi với thời gian tự đóng
        function showErrorMessage() {
            Swal.fire({
                icon: 'error',
                title: '@TempData["ErrorMessage"]',
                showConfirmButton: false,
                timer: 1500
            });
        }

        // Gọi hàm hiển thị thông báo khi SuccessMessage hoặc ErrorMessage có giá trị
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                showSuccessMessage();
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                showErrorMessage();
            </text>
        }
    </script>
}
